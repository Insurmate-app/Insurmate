---
import MortgagePolicyWorkflowSVG from "../components/MortgagePolicyWorkflowSVG";
import HyperledgerFabricWorkflow from "../components/HyperledgerFabricWorkflow";
import MainLayout from "../layouts/MainLayout.astro";
---

<MainLayout title="Learn More" description="Explore more about our workflows and architecture.">
  <section class="workflow-container">
    <h1 class="page-title">Discover More About Our Workflows</h1>
    <p class="page-description">
      Dive deep into the details of our Mortgage Policy Workflow and Hyperledger Fabric Architecture.
    </p>
    
    <div class="workflow-content">
      <div class="workflow-card mortgage-workflow-card">
        <a href="https://github.com/Toe12/blockchain-experimental" target="_blank" rel="noopener noreferrer" class="github-icon-link">
          <i class="bi bi-github github-icon"></i>
        </a>
        <h2>Mortgage Policy Workflow</h2>
        <div class="svg-container">
          <MortgagePolicyWorkflowSVG client:load />
        </div>
      </div>

      <div class="workflow-card">
        <a href="https://github.com/Toe12/blockchain-experimental" target="_blank" rel="noopener noreferrer" class="github-icon-link">
          <i class="bi bi-github github-icon"></i>
        </a>
        <h2>Hyperledger Fabric Workflow</h2>
        <div class="svg-container">
          <HyperledgerFabricWorkflow client:load />
        </div>
      </div>
    </div>
  </section>

  <style>
    .workflow-container {
      max-width: 1400px;
      margin: 0 auto;
      padding: 40px 20px;
      text-align: center;
    }
    .page-title {
      font-size: 3rem;
      margin-bottom: 10px;
      color: #333;
    }
    .page-description {
      font-size: 1.2rem;
      margin-bottom: 30px;
      color: #555;
    }
    .workflow-content {
      display: flex;
      flex-direction: column;
      gap: 40px;
      align-items: center;
    }
    .workflow-card {
      width: 90%;
      max-width: 1200px;
      padding: 40px;
      background: linear-gradient(145deg, #f3f3f3, #ffffff);
      border-radius: 15px;
      box-shadow: 0 6px 12px rgba(0, 0, 0, 0.15);
      transition: transform 0.3s, box-shadow 0.3s;
      text-align: left;
    }
    .mortgage-workflow-card {
      max-width: 1400px; /* Wider for Mortgage Policy Workflow */
      padding: 50px; /* Increased padding for more space */
    }
    .workflow-card:hover {
      transform: translateY(-5px);
      box-shadow: 0 10px 20px rgba(0, 0, 0, 0.2);
    }
    .workflow-card h2 {
      font-size: 2rem;
      margin-bottom: 20px;
      color: #111;
    }
    .svg-container {
      width: 100%;
      overflow: visible; /* Ensure no clipping of the SVG */
    }
    .svg-container svg {
      display: block;
      width: 100%;
      height: auto; /* Ensure proportional scaling */
      overflow: visible; /* Ensure text is not cut off */
    }
    .github-icon-link {
      position: absolute;
      top: 15px;
      right: 15px;
      text-decoration: none;
      color: #000;
    }
    .github-icon {
      font-size: 1.5rem;
    }
    @media (max-width: 768px) {
      .workflow-card {
        width: 95%;
        padding: 30px;
      }
      .page-title {
        font-size: 2.5rem;
      }
      .page-description {
        font-size: 1rem;
      }
    }
  </style>
</MainLayout>
